@model IEnumerable<OrderDetails>
@{ Layout = "_Layout"; ViewBag.Title = "Orders";}
<h1>All Orders</h1>

<table class="table table-sm table-striped table-bordered m-2">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>Date</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Total</th>
            <th>OrderStatus</th>
            <th>Buttons</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var v in Model)
        {
            <tr>
                <td>@v.OrderId</td>
                <td>@v.OrderDate</td>
                <td>@v.CustomerFname</td>
                <td>@v.CustomerLname</td>
                <td>@v.CustomerEmail</td>
                <td>@Decimal.Round(v.Total, 2)</td>
                <td>@v.OrderStatus</td>
                <td><a asp-action="GetOrder" asp-route-id="@v.OrderId" class="btn btn-sm btn-light">Start Order</a></td>
            </tr>
        }
    </tbody>
</table>
